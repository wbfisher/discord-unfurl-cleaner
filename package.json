{
  "name": "discord-unfurl-cleaner",
  "version": "1.0.0",
  "description": "Discord bot that replaces cluttered link previews with clean embeds",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
